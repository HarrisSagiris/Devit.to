                                                    } else {
                                                        details.style.display = 'none';
                                                        icon.classList.replace('fa-chevron-down', 'fa-chevron-right');
                                                        btn.innerHTML = '<i class="fas fa-chevron-right"></i> Show point details';
                                                    }
                                                }

                                                // Immediately fetch stats when script loads
