    .ios-prompt p {
        color: var(--text-muted);
        margin-bottom: 1rem;
    }

    .ios-prompt img {
        max-width: 300px;
        margin: 1rem auto;
        border-radius: 0.5rem;
        box-shadow: var(--shadow);
    }
