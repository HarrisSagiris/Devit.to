                    const newUsername = modal.find('#new-username-input').val();
                    if (newUsername) {
                        $.ajax({
                            url: '/change-username',
                            method: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify({ newUsername }),
                            success: function(response) {
